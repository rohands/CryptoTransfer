<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rohan.shopkeeper">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.rohan.shopkeeper.MainActivity"
            android:label="Shopkeeper" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.rohan.shopkeeper.Home" />
        <activity android:name="com.example.rohan.shopkeeper.Login" />
        <activity android:name="com.example.rohan.shopkeeper.search.SearchFunctionality" />
        <activity android:name="com.example.rohan.shopkeeper.Registration" />
        <activity android:name="com.example.rohan.shopkeeper.Transaction" />
        <activity android:name="com.example.securetransfer.generator.Generator" />
        <activity android:name="com.example.securetransfer.scanner.Scanner" />
        <activity android:name="com.example.securetransfer.bluetooth.BluetoothSend" />
        <activity android:name="com.example.securetransfer.bluetooth.BluetoothReceive" />
        <activity android:name="com.example.securetransfer.seller.SellerIntroduction" />
        <activity android:name="com.example.securetransfer.seller.SellerTransaction" />
        <activity android:name="com.example.rohan.shopkeeper.CallbackImplementor" />

    </application>

</manifest>
